// database
datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

// generator
generator client {
  provider             = "prisma-client-py"
  recursive_type_depth = 5
}

// data models
model Infraction {
  id String @id @default(uuid())
  type String
  infractorid BigInt
  targetid BigInt
  reason String

}

model TicketCreator {
  id String @id @default(uuid())
  channelid BigInt
  userid BigInt

}